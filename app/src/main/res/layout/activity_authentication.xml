<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.app.jasenko.cwsboco_product_tool.AuthenticationActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAuthentication"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:ellipsize="start"
            android:hint="Enter secret key"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <CheckBox
            android:text="Remember secret key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbRememberKey" />

        <Button
            android:id="@+id/buttAuthenticate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "18sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Authenticate"/>

    </LinearLayout>


</LinearLayout>
