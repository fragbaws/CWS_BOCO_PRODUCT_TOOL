<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.app.jasenko.cwsboco_product_tool.Trousers.TrousersSpecActivity">

        <LinearLayout
            android:id = "@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_product_type_trouser"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:padding="1dp"
                />

            <Spinner
                android:id="@+id/spinner_waist_trouser"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:padding="1dp" />


            <Spinner
                android:id="@+id/spinner_pocket_trouser"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:padding="1dp" />

            <Spinner
                android:id="@+id/spinner_fly_trouser"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="1dp" />

            <Spinner
                android:id="@+id/spinner_fabric_trouser"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="1dp" />

            <Spinner
                android:id="@+id/spinner_garmentColor_trouser"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:padding="1dp" />

        </LinearLayout>

    <Button
        android:layout_below="@id/linearLayout"
        android:id="@+id/continue_button_spec_trouser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button_main"/>

</RelativeLayout>
