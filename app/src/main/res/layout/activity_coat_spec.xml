<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.app.jasenko.cwsboco_product_tool.Coats.CoatsSpecActivity">

        <LinearLayout
            android:id = "@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_product_type"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="16dp"
                android:prompt="@string/product_types_prompt"
                />

            <Spinner
                android:id="@+id/spinner_cuffs"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="16dp"
                android:prompt="@string/cuffs_prompt" />

            <Spinner
                android:id="@+id/spinner_pockets"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:padding="16dp"
                android:prompt="@string/pockets_prompt" />

            <Spinner
                android:id="@+id/spinner_collar"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="16dp"
                android:prompt="@string/collar_prompt" />

            <Spinner
                android:id="@+id/spinner_garmentColor"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="16dp"
                android:prompt="@string/garment_color_prompt" />

            <Spinner
                android:id="@+id/spinner_collarColor"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:padding="16dp"
                android:prompt="@string/collar_color_prompt" />


        </LinearLayout>


    <Button
        android:layout_below="@id/linearLayout"
        android:id="@+id/continue_button_spec"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button_main"/>

</RelativeLayout>
