<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jasenko.cwsboco_product_tool.Jackets.GenerateJacketActivity">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:id = "@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="Account Name:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="Product:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="Product type:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:text="Collar:"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="Cuffs:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="Pockets:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="Stud:"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="Fabric:"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:text="Garment color:"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:text="Collar color:"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:text="Product code:"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginTop="55dp">

        <TextView
            android:id="@+id/txtAccName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtCollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtCuffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtPockets"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtStud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtFabric"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtGarmentColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtCollarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtProductCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGeneratePdf"
        android:layout_width="match_parent"
        android:layout_height = "140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Generate PDF"
        android:textSize="22dp" />

</RelativeLayout>
